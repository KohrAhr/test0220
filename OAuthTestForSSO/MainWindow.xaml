<Window x:Class="OAuthTestForSSO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OAuthTestForSSO"
        mc:Ignorable="d"
        Title="Windows Desktop app and remote server with SSO" Height="450" Width="800">
    <Grid>
        <Button Content="Run test" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top" Click="Button_Click" Width="116"/>
        <TextBox x:Name="txtAddress" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="http://localhost:5000/" VerticalAlignment="Top" Width="390"/>


        <TextBox IsReadOnly="True" x:Name="txtLog" Margin="10,58,10,10" TextWrapping="Wrap" Text="" Background="LightYellow" VerticalScrollBarVisibility="Visible" AcceptsTab="True" AcceptsReturn="True"/>

    </Grid>
</Window>
